@model BusinessApplication.Web.ViewModels.EditTaskViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div>
    <form asp-action="EditTask" asp-controller="TaskOrganizer" method="post">
        <input asp-for="Id" hidden>
        <div class="row">
            <div class="form-group col-md-8">
                <label class="control-label" asp-for="TaskName"></label>
                <input class="form-control" asp-for="TaskName" />
                <span class="text-danger" asp-validation-for="TaskName"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Status"></label>
                <select class="form-control" asp-for="Status" asp-items="@Model.AvailableStatuses"></select>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Description"></label>
                <textarea class="form-control" asp-for="Description"></textarea>
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Executors"></label>
                <input class="form-control" asp-for="Executors" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="LaborPlan"></label>
                <input class="form-control" asp-for="LaborPlan" />
                <span class="text-danger" asp-validation-for="LaborPlan"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="LaborFact"></label>
                <input class="form-control" asp-for="LaborFact" />
                <span class="text-danger" asp-validation-for="LaborFact"></span>
            </div>
        </div>
        <div class="form-group">
            <button class="btn btn-success" type="submit">@Localizer["SaveChangesButton"]</button>
            <a class="btn btn-warning" onclick="setTaskInfoView(this)" value="@Model.Id">@Localizer["CancelButton"]</a>            
        </div>
    </form>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}



