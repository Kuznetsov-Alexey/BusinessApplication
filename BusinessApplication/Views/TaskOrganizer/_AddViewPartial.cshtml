@model BusinessApplication.Web.ViewModels.CreateTaskViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<div>
    <form asp-action="Add" asp-controller="TaskOrganizer" method="post">
        <input hidden asp-for="ParentTaskId" />
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="TaskName"></label>
                <input class="form-control" asp-for="TaskName" />
                <span class="text-danger" asp-validation-for="TaskName"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Description"></label>
                <input class="form-control" asp-for="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="Executors"></label>
                <input class="form-control" asp-for="Executors" />
                <span class="text-danger" asp-validation-for="Executors"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <label asp-for="LaborPlan"></label>
                <input class="form-control" asp-for="LaborPlan" />
                <span class="text-danger" asp-validation-for="LaborPlan"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-8">
                <button class="btn btn-success" type="submit">@Localizer["SaveChangesButton"]</button>
                <a class="btn btn-warning" onclick="setTaskInfoView(this)" value="@Model.ParentTaskId">@Localizer["CancelButton"]</a>
            </div>
        </div>
    </form>
</div>

@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


